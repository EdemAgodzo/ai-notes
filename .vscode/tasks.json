{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend (FastAPI)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ".\\.venv\\Scripts\\python.exe -m uvicorn main:app --reload --port 8000"
        

        

      ],

      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": [],
      "isBackground": true,
      "options": { "cwd": "${workspaceFolder}\\backend" }
      

    },
    {
      "label": "Frontend (Vite)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "npm run dev"
      ],
      
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": [],
      "isBackground": true,
      "options": { "cwd": "${workspaceFolder}\\frontend"}
    },
    {
      "label": "Dev: Start All",
      "dependsOn": ["Backend (FastAPI)", "Frontend (Vite)"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
